<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>emsavalles</name>
    <description>
        Entérate de la información más importante de Ciudad Valles, S.L.P. y la Huasteca potosina con la aplicación oficial de emsavalles.com
    </description>
    <author email="emsavalles@hotmail" href="http://emsavalles.com">
        Ismael Gómez Rodríguez
    </author>
    <icon src="icons/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- iPhone 6 / 6+ -->
    <icon src="icons/ios/Icon-App-60x60@3x.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="icons/ios/Icon-App-60x60@1x.png" platform="ios" width="60" height="60" />
    <icon src="icons/ios/Icon-App-60x60@2x.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icons/ios/Icon-App-76x76@1x" platform="ios" width="76" height="76" />
    <icon src="icons/ios/Icon-App-76x76@2x.png" platform="ios" width="152" height="152" />
    <icon src="icons/ios/Icon-App-83.5x83.5@2x.png" platform="ios" width="167" height="167" />

    <!-- Settings Icon -->
    <icon src="icons/ios/Icon-App-29x29@1x.png" platform="ios" width="29" height="29" />
    <icon src="icons/ios/Icon-App-29x29@2x.png" platform="ios" width="58" height="58" />
    <icon src="icons/ios/Icon-App-29x29@3x.png" platform="ios" width="87" height="87" />

    <!-- Spotlight Icon -->
    <icon src="icons/ios/Icon-App-20x20@2x.png" platform="ios" width="40" height="40" />
    <icon src="icons/ios/Icon-App-40x40@2x.png" platform="ios" width="80" height="80" />
    <icon src="icons/Icon-App-40x40@3x.png" platform="ios" width="120" height="120" />

    <icon src="icons/android/ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="icons/android/mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="icons/android/hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="icons/android/xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="icons/android/xxhdpi.png" platform="android" qualifier="xxhdpi" />
    <icon src="icons/android/xxxhdpi.png" platform="android" qualifier="xxxhdpi" />
    <icon src="icons/android/fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="portrait" />
    <engine name="ios" spec="~4.5.4" />
    <engine name="android" spec="~6.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-geolocation" spec="~4.0.1" />
    <plugin name="cordova.plugins.diagnostic" spec="~3.9.2" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="nl.madebymark.share" spec="~0.1.1" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.2.1" />
</widget>
